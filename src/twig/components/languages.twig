<ul class="languages__list">  
    {% set languages = {
    af: "Afrikaans",
    de: "Deutsch",
    en: "English",
    es: "Español",
    fr: "Français",
    it: "Italiano",
    pl: "Polski",
    pt: "Português",
    hr: "Srpsko-hrvatski",
    fi: "Suomi",
    tr: "Türkçe",
    ru: "Русский",
    uk: "Українська",
    hy: "Հայերեն",
    he: "עִברִית",
    ar: "العربية",
    hi: "हिन्दी",
    th: "ภาษาไทย",
    zh: "中文",
    ja: "日本語"
    } %}  

    {% for key, value in languages %}
        <li>
            <a href="#" lang="{{ key }}" class="languages__link">
                <svg class="icon" aria-hidden="true" focusable="false">
                    <use href="/assets/images/flags.svg#icon-flag-{{ key }}"></use>
                </svg>
                <span>{{ value }}</span>
                
            </a>
        </li>
    {% endfor %} 
</ul>