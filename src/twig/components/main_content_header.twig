<div class="main__content__header">
	<div class="main__content__header__cover">
		<div class="profile__cover">
			<div class="profile__cover__slider">
				<img src="{{ profileCoverImg }}" alt="" class="profile__cover_img">
			</div>
		</div>
	</div>	
	<div class="main__content__header__data">
		<div class="main__content__header__data__top">
			<div class="main__content__header__ava">
				<div class="entety__avatar is-lg">
					<img src="{{ entetyAvatarImg }}" alt="" class="entety__avatar_img">
				</div>
			</div>
			<div class="main__content__header__title">
				<div class="group__name">
					<div class="group__name_h">{{ groupNameH }}</div>
					<div class="group__name_info">{{ groupNameInfo }}</div>
				</div>
			</div>
			<div class="main__content__header__actions">
				<ul class="header__action__menu">
					{% for key, value in headerActions %}
						{% if key == 'more' %}
							<li class="expand__action__item dropdown {{ key }}">
								<button class="btn is-ghost" type="button" aria-label="{{ value }}">
			            			<svg class="icon" aria-hidden="true" focusable="false">
			                			<use href="/assets/sprite/sprite.svg#icon-{{ key }}"></use>
			            			</svg>
								</button>	
								<div class="dropdown-menu_wrap">
									<ul class="dropdown-menu"> 
									{% for key, value in mainSidebarList %}
										{% if value[0] %}
				                            <li class="lg_visible">
												{% if value[1] == 'link' %}
				                                	<a href="{{value[2]}}" class="alphabet">
												{% else %}
				                                	<a href="javascript:void(0);" class="alphabet" data-bs-toggle="modal" data-bs-target="#{{value[2]}}" aria-label="{{value[2]}}">
												{% endif %}
				                                    <svg class="icon" aria-hidden="true" focusable="false">
				                                        <use href="/assets/sprite/sprite.svg#icon-{{value[0]}}"></use>
				                                    </svg>
				                                    <span>{{value[3]}}</span>
				                                </a>
				                            </li>
			                            {% endif %}
									{% endfor %} 
											<li class="lg_visible">
												<span class="border_bottom_grey"></span>
											</li>
									{% for key, value in headerActionsList %}
										{% if value[0] %}
				                            <li>
												{% if value[1] == 'link' %}
				                                	<a href="{{value[2]}}" class="alphabet">
												{% else %}
				                                	<a href="javascript:void(0);" class="alphabet" data-bs-toggle="modal" data-bs-target="#{{value[2]}}" aria-label="{{value[2]}}">
												{% endif %}
				                                    <svg class="icon" aria-hidden="true" focusable="false">
				                                        <use href="/assets/sprite/sprite.svg#icon-{{value[0]}}"></use>
				                                    </svg>
				                                    <span>{{value[3]}}</span>
				                                </a>
				                            </li>
				                        {% endif %}
									{% endfor %}
			                        </ul> 
					            </div>					
							</li>
						{% elseif key == 'stats'%}
							<li class="expand__action__item stats lg_hidden">
    							<button class="btn is-ghost" type="button" data-bs-toggle="modal" data-bs-target="#{{ value }}" aria-label="{{ value }}">   
			            			<svg class="icon" aria-hidden="true" focusable="false">
			                			<use href="/assets/sprite/sprite.svg#icon-stats"></use>
			            			</svg>
								</button>								
							</li>			
							<li class="expand__action__item dropdown lg_visible">
								<button class="btn is-ghost" type="button" aria-label="{{ value }}">
			            			<svg class="icon" aria-hidden="true" focusable="false">
			                			<use href="/assets/sprite/sprite.svg#icon-more"></use>
			            			</svg>
								</button>	
								<div class="dropdown-menu_wrap">
									<ul class="dropdown-menu">
										{% for key, value in mainSidebarList %}
				                            <li class="lg_visible">
												{% if value[1] == 'link' %}
				                                	<a href="{{value[2]}}" class="alphabet">
												{% else %}
				                                	<a href="javascript:void(0);" class="alphabet" data-bs-toggle="modal" data-bs-target="#{{value[2]}}" aria-label="{{value[2]}}">
												{% endif %}
				                                    <svg class="icon" aria-hidden="true" focusable="false">
				                                        <use href="/assets/sprite/sprite.svg#icon-{{value[0]}}"></use>
				                                    </svg>
				                                    <span>{{value[3]}}</span>
				                                </a>
				                            </li>
										{% endfor %}
											<li class="lg_visible">
												<span class="border_bottom_grey"></span>
											</li>
										{% for key, value in headerActionsList %}
					                            <li>
													{% if value[1] == 'link' %}
					                                	<a href="{{value[2]}}" class="alphabet">
													{% else %}
					                                	<a href="javascript:void(0);" class="alphabet" data-bs-toggle="modal" data-bs-target="#{{value[2]}}" aria-label="{{value[2]}}">
													{% endif %}
					                                    <svg class="icon" aria-hidden="true" focusable="false">
					                                        <use href="/assets/sprite/sprite.svg#icon-{{value[0]}}"></use>
					                                    </svg>
					                                    <span>{{value[3]}}</span>
					                                </a>
					                            </li>
										{% endfor %}
			                        </ul> 
					            </div>
							</li>
						{% elseif key == 'likeblue' %}
							<li class="expand__action__item is_subscribe has_notice {{ key }}" data-tooltip="Subscribe">
    							<button class="btn is-ghost" type="button">   
			            			<svg class="icon" aria-hidden="true" focusable="false">
			                			<use href="/assets/sprite/sprite.svg#icon-{{ key }}"></use>
			            			</svg>
			            			 <span class="nt-only">Subscribe</span>
								</button>						
							</li>
						{% else %}
							<li class="expand__action__item {{ key }}" data-tooltip="Subscribe">
    							<button class="btn is-ghost" type="button" data-bs-toggle="modal" data-bs-target="#{{ value }}" aria-label="{{ value }}">
			            			<svg class="icon" aria-hidden="true" focusable="false">
			                			<use href="/assets/sprite/sprite.svg#icon-{{ key }}"></use>
			            			</svg>
								</button>						
							</li>
						{% endif %}
					{% endfor %}				
				</ul>

			</div>	
		</div>
	</div>	
	
	{% if statList|length > 0 %}
		<div class="stat__body__list stat__body__list_big">
			<div class="stat__body__list__item has-shadow has-border-radius-base">
	            <div class="stat_count">105000</div>
	            <div class="stat_title">Posts</div>
	        </div>
			<div class="stat__body__list__item has-shadow has-border-radius-base">
	            <div class="stat_count">5</div>
	            <div class="stat_title">Friends</div>
	        </div>
			<div class="stat__body__list__item has-shadow has-border-radius-base sm_hidden">
	            <div class="stat_count">440</div>
	            <div class="stat_title">Folowers</div>
	        </div>
			<div class="stat__body__list__item has-shadow has-border-radius-base sm_hidden">
	            <div class="stat_count">2</div>
	            <div class="stat_title">Subscriptions</div>
	        </div>
		</div>
	{% endif %}
	
	<div class="main__content__header__list">

		<button class="main__content__search-submit is_rubber" id="statisticBtn" type="submit" aria-label="Statistic">
            <span>All</span>
        </button>
		<ul class="main__content__header__list__menu">
			<li class="expand__action__item active">
				<button class="btn is-ghost" type="button" aria-label="Edit profile">
        			<span>All</span>
				</button>						
			</li>
			<li class="expand__action__item">
				<button class="btn is-ghost" type="button" aria-label="Edit profile">
        			<span>Broadcasts</span>
				</button>						
			</li>
			<li class="expand__action__item">
				<button class="btn is-ghost" type="button" aria-label="Edit profile">
        			<span>Photos</span>
				</button>						
			</li>
			<li class="expand__action__item">
				<button class="btn is-ghost" type="button" aria-label="Edit profile">
        			<span>Videos</span>
				</button>						
			</li>
		</ul>
	</div>
</div>
