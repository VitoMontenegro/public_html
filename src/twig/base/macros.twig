{% macro input(name, value, type, size) %}
    <input
        type="{{ type | default('text') }}"
        name="{{ name }}"
        value="{{ value | e }}"
        size="{{ size | default(20) }}" />
{% endmacro %}

{% macro details(name, count) %}
        <button class="btn is-ghost is-details" type="button" aria-label="{{ name }}">
            <span class="text-truncate">
                {{ name }} ({{ count }})
            </span>
        </button>
{% endmacro %}

{% macro isIcon(name, icon, list, nameList) %}
        <div class="btn is-ghost dropdown" type="button" aria-label="{{ name }}">
            <svg class="icon" aria-hidden="true" focusable="false">
                <use href="/assets/sprite/sprite.svg#icon-{{ icon }}"></use>
            </svg>
            <div class="dropdown-menu_wrap">
                <ul class="dropdown-menu"> 
                        <li><span class="menu__title">{{ nameList }}</span></li>
                    {% for keylist, valuelist in list %}
                        <li>
                            <a href="" class="{{ valuelist[0] }}">
                                <svg class="icon" aria-hidden="true" focusable="false">
                                    <use href="/assets/sprite/sprite.svg#icon-{{ valuelist[0] }}"></use>
                                </svg>
                                <span>{{ valuelist[1] }}</span>
                            </a>
                        </li>
                    {% endfor %}
                    
                </ul>  
            </div>
        </div>
{% endmacro %}

{% macro groups(entetyAvatarImg, entetyTitle,entetySubTytle,enterySubtitleLast) %}

        <div class="group__body__list__item">
            <div class="group__body__list__ava">
                <span>
                    <figure class="entety__avatar">
                        <img src="{{ entetyAvatarImg }}" alt="" class="entety__avatar_img">
                    </figure>                
                </span>
                <button class="entety__btns">
                    <svg class="icon" aria-hidden="true" focusable="false">
                        <use href="/assets/sprite/sprite.svg#icon-more"></use>
                    </svg>
                </button>
            </div>
            <div class="group__body__list__title">
                <div class="group__name"><a href="#" class="user__title link is-wrapper">{{ entetyTitle }}</a></div>
            </div>



            <div class="group__body__list__captio">
                {% if   entetySubTytle|length > 0 > 0 %}
                    <div class="list__captio__item">{{ entetySubTytle }}</div>
                {% endif %}

                {% if enterySubtitleLast|length > 0 %}
                    <div class="list__captio__item">{{ enterySubtitleLast }}</div>
                {% endif %}
                
            </div>
        </div>
{% endmacro %}

